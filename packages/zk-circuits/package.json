{
	"name": "@zkfair/zk-circuits",
	"version": "0.0.0-private",
	"private": true,
	"type": "module",
	"scripts": {
		"compile": "nargo build --workspace",
		"generate-training-vk": "bb write_vk -b ./target/training.json -o ./target/training_vk --oracle_hash keccak",
		"generate-fairness-vk": "bb write_vk -b ./target/fairness_audit.json -o ./target/fairness_audit_vk --oracle_hash keccak",
		"generate-vks": "bun run generate-training-vk && bun run generate-fairness-vk",
		"fill-prover": "bun scripts/fill-prover-toml.ts",
		"build": "bunx noir-codegen",
		"build:full": "bun run compile && bun run generate-vks && bunx noir-codegen",
		"build:dev": "bun run compile && bunx noir-codegen",
		"dev": "bun run build:full && nargo test --workspace"
	},
	"files": [
		"common/src/**/*.nr",
		"training/src/**/*.nr",
		"fairness_audit/src/**/*.nr",
		"target/**/*.json",
		"target/**/*-vk",
		"codegen/**/*",
		"Nargo.toml"
	],
	"exports": {
		"./codegen": "./codegen/index.ts"
	},
	"devDependencies": {
		"@noir-lang/noir_js": "^1.0.0-beta.15",
		"@types/bun": "^1.3.2",
		"bun-types": "^1.3.2"
	},
	"dependencies": {
		"@aztec/bb.js": "^2.1.4",
		"@noir-lang/noir_codegen": "^1.0.0-beta.15"
	}
}
