{
	"name": "@zkfair/zk-circuits",
	"private": true,
	"type": "module",
	"scripts": {
		"compile": "nargo compile",
		"generate-vks": "bb write_vk -b ./target/zk_circuit.json -o ./target --oracle_hash keccak",
		"build": "bun run compile && bun run generate-vks",
		"dev": "bun run build && nargo test"
	},

	"files": [
		"src/**/*.nr",
		"target/**/*.json",
		"target/**/*-vk",
		"Nargo.toml"
	],
	"exports": {
		"./circuit": "./target/zk_circuit.json"
	}
}
