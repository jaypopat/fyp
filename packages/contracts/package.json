{
	"name": "@zkfair/contracts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@types/bun": "latest",
		"@wagmi/cli": "^2.5.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"scripts": {
		"generate-verifier": "bb write_solidity_verifier -k ../zk-circuits/target/vk -o ./src/Verifier.sol",
		"deploy-anvil": "forge script script/DeployAndSeed.s.sol:DeployAndSeed --rpc-url http://localhost:8545 --broadcast --private-key 0xac0974bec39a17e36ba4a6b4d238ff944bacb478cbed5efcae784d7bf4f2ff80",
		"deploy-sepolia": "forge script script/DeployAndSeed.s.sol:DeployAndSeed --rpc-url https://ethereum-sepolia-rpc.publicnode.com --broadcast --private-key $SEPOLIA_PRIVATE_KEY",
		"build": "bun run generate-verifier && forge build && bunx wagmi generate",
		"test": "forge test",
		"clean": "forge clean",
		"sync-address": "bun run js-scripts/update-env.ts",
		"dev": "bun run build && bun run deploy-anvil && bun run sync-address"
	},
	"exports": {
		"./abi": "./src/generated.ts"
	}
}
