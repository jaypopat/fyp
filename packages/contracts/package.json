{
	"name": "@zkfair/contracts",
	"type": "module",
	"private": true,
	"devDependencies": {
		"@types/bun": "latest",
		"@wagmi/cli": "^2.5.1"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"scripts": {
		"generate-verifier": "bb write_solidity_verifier -k ../zk-circuits/target/vk -o ./src/Verifier.sol",
		"build": "bun run generate-verifier && forge build && bunx wagmi generate",
		"test": "forge test",
		"clean": "forge clean",
		"dev": "bun run build && forge test --watch"
	},
	"exports": {
		"./counter-abi": "./out/Counter.sol/Counter.json",
		"./verifier-abi": "./out/Verifier.sol/IVerifier.json",
		"./abi": "./src/generated.ts"
	}
}
