{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"lander#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": true
		},
		"web#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**"],
			"cache": true
		},
		"docs#build": {
			"dependsOn": ["^build"],
			"outputs": [".output/**"],
			"cache": true
		},
		"@zkfair/zk-circuits#build": {
			"outputs": ["target/**"],
			"cache": true
		},
		"@zkfair/contracts#build": {
			"dependsOn": ["@zkfair/zk-circuits#build"],
			"outputs": ["src/Verifier.sol"],
			"cache": true
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	}
}
