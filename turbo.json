{
	"$schema": "https://turbo.build/schema.json",
	"ui": "tui",
	"tasks": {
		"build": {
			"dependsOn": ["^build"],
			"cache": true
		},
		"www#build": {
			"dependsOn": ["^build"],
			"outputs": ["dist/**", ".vercel/**"],
			"cache": true
		},
		"web#build": {
			"dependsOn": ["@zkfair/sdk#build"],
			"outputs": ["dist/**"],
			"cache": true
		},
		"@zkfair/zk-circuits#build": {
			"inputs": ["src/**/*.nr", "Nargo.toml"],
			"outputs": ["target/**"],
			"cache": true
		},
		"@zkfair/contracts#build": {
			"dependsOn": ["@zkfair/zk-circuits#build"],
			"cache": true
		},
		"@zkfair/sdk#build": {
			"dependsOn": [],
			"outputs": ["dist/**", "*.js", "*.d.ts"],
			"cache": true
		},
		"dev": {
			"dependsOn": ["^build"],
			"cache": false,
			"persistent": true
		}
	}
}
