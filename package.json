{
	"name": "fyp",
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"concurrently": "^9.2.1",
		"turbo": "^2.7.2"
	},
	"overrides": {
		"@noir-lang/noir_js": "1.0.0-beta.15",
		"@noir-lang/backend_barretenberg": "1.0.0-beta.15",
		"@noir-lang/noir_codegen": "1.0.0-beta.15",
		"@aztec/bb.js": "2.0.3"
	},
	"packageManager": "bun@1.2.21",
	"private": true,
	"scripts": {
		"check": "biome check --write .",
		"lint": "biome check",
		"dev": "concurrently --kill-others \"anvil\" \"sleep 3 && turbo dev\"",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"demo:audit": "bun scripts/audit-e2e.ts",
		"demo:type-a": "bun scripts/malicious-server-e2e-type-a.ts",
		"demo:type-b": "bun scripts/malicious-server-e2e-type-b.ts"
	},
	"type": "module",
	"workspaces": [
		"apps/*",
		"packages/*"
	]
}
